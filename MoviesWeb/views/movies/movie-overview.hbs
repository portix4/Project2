<div class="container p-4">
    <div class="card mb-3 bg-transparent h-75 border-0 mt-5" style="max-width: 1000px;">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="https://www.themoviedb.org/t/p/w600_and_h900_bestv2/{{poster_path}}" class="card-img"
                    alt="...">
                <hr>
                <div class="d-flex justify-content-between">
                    <form action="/user/favourite/{{id}}" method="POST">
                        <button type="submit" class="btn btn-dark btn-md btn-block">+ favoritos </button>
                    </form>
                    <form action="/evento/crear/{{id}}/{{original_title}}{{poster_path}}" method="GET">
                        <button type="submit" class="btn btn-dark btn-md btn-block">Crear Evento </button>
                    </form>
                </div>
            </div>
            <div class="col-md-8">
                <h1 class="card-title">
                    <p class="text-uppercase">{{original_title}}</p>
                </h1>
                <div class="d-inline-flex ms-2 gap-2">
                    {{#each genres}}
                    <p class="descriptionMovie">{{name}} ·</p>
                    {{/each}}

                    <span class="bold">Estreno:</span>{{release_date}}

                </div>

                <div class="card-body">
                    <h5>Descripción</h5>
                    <p class="card-text">{{overview}}</p>
                </div>
                <div class="container">
                    <h6>Contenido disponible en:</h6>
                </div>

            </div>
        </div>
    </div>
</div>