<div class="container p-4">
    <div class="card mb-3 bg-transparent h-75 border-0 mt-5" style="max-width: 1000px;">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="https://www.themoviedb.org/t/p/w600_and_h900_bestv2/{{poster_path}}" class="card-img"
                    alt="...">
                <hr>
                <div class="d-flex justify-content-between">
                    <a class="btn btn-dark btn-md btn-block" href="#" role="button">+ favoritos</a>
                    <a class="btn btn-dark btn-md btn-block" href="#" role="button">Crear Evento</a>
                </div>
                <p>Genero:</p>
                {{#each genres}}
                {{this.name}},
                {{/each}}
            </div>
            <div class="col-md-8">
                <h1 class="card-title">{{original_title}}</h1>
                <div class="card-body">
                    <p class="card-text">{{overview}}</p>
                </div>
            </div>
        </div>
    </div>
</div>
</div>